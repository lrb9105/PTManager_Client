<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/layout_my_chatBox"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_my_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/not_read_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toStartOf="@+id/textViewMyTime"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/img_MyMsg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_boy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewMyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="dfdfdf"
        app:layout_constraintBottom_toBottomOf="@+id/img_MyMsg"
        app:layout_constraintEnd_toStartOf="@+id/img_MyMsg"/>

</androidx.constraintlayout.widget.ConstraintLayout>