<?xml version="1.0" encoding="utf-8"?>
<!-- 인바디프래그먼트 홈-->
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/green"
            android:text="식사등록"/>

        <Button
            android:id="@+id/see_all_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:layout_marginRight="5dp"
            android:text="모아보기"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendar_inBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mcv_selectionColor="#00F" />

            <!-- 아침-->
            <include
                layout="@layout/item_meal_history"
                android:id="@+id/layout_morning"
                />

            <!-- 간식1-->
            <include
                layout="@layout/item_meal_history"
                android:id="@+id/layout_snack1"
                />

            <!-- 점심-->
            <include
                layout="@layout/item_meal_history"
                android:id="@+id/layout_lunch"
                />

            <!-- 간식2-->
            <include
                layout="@layout/item_meal_history"
                android:id="@+id/layout_snack2"
                />

            <!-- 저녁-->
            <include
                layout="@layout/item_meal_history"
                android:id="@+id/layout_evening"
                />

            <!-- 야식-->
            <include
                layout="@layout/item_meal_history"
                android:id="@+id/layout_night"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>