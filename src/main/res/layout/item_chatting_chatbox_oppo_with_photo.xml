<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_opponent_chatBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/textView_oppo_nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상대 닉네임"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/not_read_user_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:layout_marginLeft="5dp"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toBottomOf="@+id/img_OpponentMsg"
        app:layout_constraintStart_toEndOf="@+id/textView_oppo_time" />

    <ImageView
        android:id="@+id/img_OpponentMsg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_boy"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@+id/user_profile"
        app:layout_constraintStart_toEndOf="@+id/user_profile" />

    <TextView
        android:id="@+id/textView_oppo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:text="dfsdaf"
        app:layout_constraintStart_toEndOf="@+id/img_OpponentMsg"
        app:layout_constraintBottom_toBottomOf="@+id/img_OpponentMsg"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/profile_boy"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_oppo_nickName"
        >
    </de.hdodenhof.circleimageview.CircleImageView>
</androidx.constraintlayout.widget.ConstraintLayout>