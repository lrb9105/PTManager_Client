<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_btn_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_close_small_custom"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/layout_add_lesson_complete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:id="@+id/check_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_attendance_custom"
                android:background="@android:color/transparent"/>
            <!--<ImageButton
                android:id="@+id/modify_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/modify_custom"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/delete_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/delete_custom"
                android:background="@android:color/transparent"/>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_lesson_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/lesson_reserve_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="예약취소"
                android:textSize="25dp"
                android:textColor="@color/blue"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lesson_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lesson_detail"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <!-- 강의 종류 -->
        <LinearLayout
            android:id="@+id/layout_lecture_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lecture_type2"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/layout_lecture_type_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lecture_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="@string/lecture_type2"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>

        <!-- 회원 -->
        <LinearLayout
            android:id="@+id/layout_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/member"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/layout_member_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/member_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/member"
                    android:textSize="20dp"
                    
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 시작일자 -->
        <LinearLayout
            android:id="@+id/layout_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/layout_start_date_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/start_date"
                    android:textSize="20dp"
                    
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 진행시간 -->
        <LinearLayout
            android:id="@+id/layout_process_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/process_time_with_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/process_time_without_star"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/layout_process_time_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 반복 -->
        <LinearLayout
            android:id="@+id/layout_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repeat"

                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/layout_repeat_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="없음"
                    android:textSize="20dp"

                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 메모 -->
        <LinearLayout
            android:id="@+id/layout_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/memo"
                
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/layout_memo_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="없음"
                    android:inputType="textMultiLine"
                    android:textSize="20dp"
                    
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>